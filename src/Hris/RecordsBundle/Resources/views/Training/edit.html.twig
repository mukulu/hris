{% extends '::base.html.twig' %}

{% block right_content -%}
    <h1><i class="icon-edit icon-largest" title="Edit"></i><small>Training Edit</small></h1>

    <form action="{{ path('training_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <br/>
        <ul class="record_actions inline" style="float:left;">
            <li>
                <button type="submit" class="btn">Edit</button>
            </li>
            <li>
                <a href="{{ path('training') }}" class="btn">
                    Back to the list
                </a>
            </li>
        </ul>
    </form>

{% endblock %}
