{% extends '::base.html.twig' %}

{% block right_content -%}
    <h1>History list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Session_type</th>
                <th>Uid</th>
                <th>Object</th>
                <th>Status</th>
                <th>Count</th>
                <th>User</th>
                <th>Starttime</th>
                <th>Finishtime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('history_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.sessiontype }}</td>
                <td>{{ entity.uid }}</td>
                <td>{{ entity.object }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.count }}</td>
                <td>{{ entity.user }}</td>
                <td>{% if entity.starttime %}{{ entity.starttime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.finishtime %}{{ entity.finishtime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('history_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('history_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('history_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
